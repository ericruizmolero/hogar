# ============================================================
# MÉTODO 1: API OFICIAL DE IDEALISTA (requiere aprobación)
# ============================================================
# IDEALISTA_API_KEY=tu_api_key_aqui
# IDEALISTA_API_SECRET=tu_api_secret_aqui

# ============================================================
# MÉTODO 2: RAPIDAPI (RECOMENDADO - más fácil y rápido)
# ============================================================
USE_RAPIDAPI=true
RAPIDAPI_KEY=tu_rapidapi_key_aqui

# Configuración de búsqueda
IDEALISTA_COUNTRY=es
IDEALISTA_LANGUAGE=es
IDEALISTA_CENTER=40.4168,-3.7038  # Madrid centro por defecto (lat,long)
IDEALISTA_DISTANCE=5000  # Distancia en metros
IDEALISTA_PROPERTY_TYPE=homes  # homes, offices, premises, garages, bedrooms
IDEALISTA_OPERATION=sale  # sale o rent
IDEALISTA_MAX_PRICE=300000
IDEALISTA_MIN_PRICE=150000
IDEALISTA_MIN_SIZE=60
IDEALISTA_MAX_SIZE=120

# Google Sheets
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEETS_SPREADSHEET_NAME=Pisos Idealista

# Configuración de tracking
CHECK_INTERVAL_MINUTES=30
